<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="world" default="empty"/> 
  <arg name="paused" default="true"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find lunabotics2020)/worlds/field.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>
  
  <param name="robot_description" command="$(find xacro)/xacro.py '$(find lunabotics2020)/models/transportation.xacro'"/>

  <node name="mybot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
   args="-urdf -param robot_description -model transportation" />

  <node pkg="joy" type="joy_node" output="screen" name="joy_node"/> 
  <node pkg="lunabotics2020" type="DriveController" output="screen" name="DriveController" /> 
  <node pkg="lunabotics2020" type="TwistPub" output="screen" name="TwistPub"/> 


</launch>
