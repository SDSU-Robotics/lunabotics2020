<launch> 

	<!-- Load controller configuration file -->
	<rosparam file="$(find lunabotics2020)/hw_config/controllers.yaml" command="load"/>

	<!-- Spawn diff_drive_controller (from loaded config file above) -->
	<node name="controller_spawner"
		pkg="controller_manager"
		type="spawner" 
		respawn="false"
		output="screen"
		ns="/dug" 
		args="diff_drive_controller
			  joint_state_controller"
		/>

	<!-- Publishes transforms based on robot description -->
	<node name="robot_state_publisher" 
		pkg="robot_state_publisher" 
		type="robot_state_publisher" 
		respawn="false" 
		output="screen">
		</node>

	<!--node pkg="lunabotics2020" type="BaseController" name="BaseController" /-->

</launch>