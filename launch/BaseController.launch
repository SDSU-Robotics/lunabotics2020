<launch> 
	<!-- Launch Gazebo -->

	<arg name="world" default="empty"/> 
	<arg name="paused" default="true"/>
	<arg name="use_sim_time" default="true"/>
	<arg name="gui" default="true"/>
	<arg name="headless" default="false"/>
	<arg name="debug" default="false"/>
	
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(find lunabotics2020)/worlds/field.world"/>
		<arg name="paused" value="$(arg paused)"/>
		<arg name="use_sim_time" value="$(arg use_sim_time)"/>
		<arg name="gui" value="$(arg gui)"/>
		<arg name="headless" value="$(arg headless)"/>
		<arg name="debug" value="$(arg debug)"/>
	</include>

	<param name="lidar_model" textfile="$(find lunabotics2020)/description/lidar.xacro"/> 
	<node name="lidar_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
		args="-urdf -param lidar_model -model lidar
		-x 3.53 -y 0.07 -z 0.4
		-R 0 -P 0 -Y -1.57"/>
	
	<!-- Load controller configuration file -->
	<rosparam file="$(find lunabotics2020)/hw_config/controllers.yaml" command="load"/>
	<rosparam file="$(find lunabotics2020)/hw_config/hardware.yaml" command="load"/>


	<!-- Spawn diff_drive_controller (from loaded config file above) -->
	<node name="controller_spawner"
		pkg="controller_manager"
		type="spawner" 
		respawn="false"
		output="screen"
		ns="/dug" 
		args="diff_drive_controller
			  joint_state_controller"
		/>

	<node pkg="lunabotics2020" type="DugHW" name="DugHW" output="screen" ns="/dug"/>

	<!-- Spawn Dug robot model -->
	<include file="$(find lunabotics2020)/launch/simulation/SpawnDug.launch"/>

	<!-- Publishes transforms based on robot description -->
	<!--node name="robot_state_publisher" 
		pkg="robot_state_publisher" 
		type="robot_state_publisher" 
		respawn="false" 
		output="screen">
		</node-->

	<!--node pkg="lunabotics2020" type="BaseController" name="BaseController" /-->

</launch>