<launch>
	<!--Inital Robot pose, RPY in radians-->
	<arg name="transp_x" default="0.75"/>
	<arg name="transp_y" default="0"/>
	<arg name="transp_z" default="0.5"/>
	<arg name="transp_roll" default="0"/>
	<arg name="transp_pitch" default="0"/>
	<arg name="transp_yaw" default="0"/>

	<!--Spawn Transportation Bot-->
	<param name="robot_description" command="$(find xacro)/xacro '$(find lunabotics2020)/description/dug.xacro'"/>
	<node name="transportation_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
		args="-urdf -param robot_description -model transportation 
		-x $(arg transp_x) -y $(arg transp_y) -z $(arg transp_z)
		-R $(arg transp_roll) -P $(arg transp_pitch) -Y $(arg transp_yaw)"/>
</launch>