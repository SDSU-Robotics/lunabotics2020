<launch>
	<node pkg="tf2_ros" type="static_transform_publisher" name="SLRS_tf_broadcaster" args="3.255 0.04 0 0 0 0 map SLRS" />
	<param name="lidar_model" textfile="$(find lunabotics2020)/description/lidar.xacro"/> 
	<node name="lidar_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
		args="-urdf -param lidar_model -model lidar
		-x 0.1 -y -1.5 -z 0.4
		-R 0 -P 0 -Y 0"/>

	<node pkg="laser_filters" type="scan_to_scan_filter_chain" output="screen" name="laser_filter">
		<remap from="scan" to="SLRS_raw" />  <!--Topic to subscribe to-->
		<remap from="scan_filtered" to="SLRS_filtered"/>  <!--Topic to publish to-->

		<!--Load config file-->
		<rosparam command="load" file="$(find lunabotics2020)/config/SLRS_filter.yaml" />
	</node>
</launch>