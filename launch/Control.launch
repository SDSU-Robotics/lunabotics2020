<launch>
    <node respawn="true" pkg="joy" type="joy_node" name="ExcvJoyNode" >
		<param name="dev" type="string" value="/dev/input/js0" />
		<param name="deadzone" value="0.05" />
        <remap from="/joy" to="/Excv/joy" />
	</node>
    <node respawn="true" pkg="joy" type="joy_node" name="TPortJoyNode" >
		<param name="dev" type="string" value="/dev/input/js1" />
		<param name="deadzone" value="0.05" />
        <remap from="/joy" to="/TPort/joy" />
	</node>

    <node pkg="lunabotics2020" type="ExcvController" name="ExcvController" />
    <node pkg="lunabotics2020" type= "TPortController" name= "TPortController" />



    <node name="beaconLidar"          pkg="rplidar_ros"  type="rplidarNode" output="screen">
		<param name="serial_port"         type="string" value="/dev/ttyUSB0"/>  
		<param name="serial_baudrate"     type="int"    value="256000"/>
		<param name="frame_id"            type="string" value="beacon_frame"/>
		<param name="inverted"            type="bool"   value="false"/>
		<param name="angle_compensate"    type="bool"   value="true"/>
		<param name="scan_mode"			  type="string" value="DenseBoost"/>

		<!--Change topic name to beacon_scan-->
		<remap from="scan" to="beacon_scan"/>
	</node>


	<node pkg="laser_filters" type="scan_to_scan_filter_chain" output="screen" name="beacon_filter">
		<remap from="scan" to="beacon_scan" />  <!--Topic to subscribe to-->
		<remap from="scan_filtered" to="beacon_scan_filtered"/>  <!--Topic to publish to-->

		<!--Load config file-->
		<rosparam command="load" file="$(find lunabotics2020)/launch/beacon_filter.yaml" />
	</node>

	<node pkg="laser_filters" type="scan_to_scan_filter_chain" output="screen" name="perception_filter">
		<remap from="scan" to="perception_scan" />  <!--Topic to subscribe to-->
		<remap from="scan_filtered" to="perception_scan_filtered"/>  <!--Topic to publish to-->

		<!--Load config file-->
		<rosparam command="load" file="$(find lunabotics2020)/launch/beacon_filter.yaml" />
	</node>

	<node pkg="lunabotics2020" type="FlagLocalization" name="FlagLocalization"></node>
	
	  <!-- Elevation mapping node -->
    <node pkg="elevation_mapping" type="elevation_mapping" name="elevation_mapping" output="screen">
    	<rosparam command="load" file="$(find lunabotics2020)/config/robot.yaml" />
    	<rosparam command="load" file="$(find lunabotics2020)/config/postprocessor_pipeline.yaml" />
		<rosparam command="load" file="$(find lunabotics2020)/config/simple_demo_map.yaml" />
    </node>
	
	<node pkg="lunabotics2020" type="Odometry" name="Odometry"></node>

	<node pkg="lunabotics2020" type="LaserToPointCloud" name="LaserToPointCloud"></node>

  	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find lunabotics2020)/config/Perception.rviz" />

	<node pkg="tf2_ros" type="static_transform_publisher" name="beacon_broadcaster" args="3.255 0.04 0 0 0 0 map beacon_frame" /> <!-- Map to Lidar Transform-->
	<node pkg="tf2_ros" type="static_transform_publisher" name="flag_broadcaster" args="-.15 .3 0 0 0 0 flag transportation" /> <!-- Flag to Center of Robot Transform-->
	<node pkg="tf2_ros" type="static_transform_publisher" name="camera_broadcaster" args="0 0.3 0 3.14 0 1.57 transportation head_camera" /> <!-- Center of Robot to Camera Transform-->
	<node pkg="tf2_ros" type="static_transform_publisher" name="perception_broadcaster" args="-0.15 -0.07 -0.30 1.57 -0.785 0 flag perception_frame" /> <!-- Map to Lidar Transform-->
	
</launch>